<div class="side-bar-header">
  <div class="header-name">
    <%= link_to edit_user_path(current_user) do %>
      <%= current_user.name %>
    <% end %>
  </div>
  <div class="create-drawer">
      <%= link_to "新しい引き出しを作る", new_drawer_path %>
  </div>
</div>

<div class="drawers">
  <% @drawers.each do |drawer| %>
    <div class="side-drawer">
      <div class="drawer-title">
        <%=link_to drawer.title, drawer_path(:id) %>
        <div class="drawer-user-name">
        <%= drawer.user.name %>
        </div>
        <div class="message-date">
          <%= l drawer.created_at %>
        </div>
      </div>
    </div>
   <% end %>
</div>